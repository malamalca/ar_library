ui_dialog "ARHIM Insulated Reveal"
UI_CURRENT_PAGE gs_ui_current_page

xLeft = 20

yTop = 5
yLabel = 15
yRow = 40

iPageIDRoot 			= -1
iPageIDInsulation		=  1
iPageIDPlaster			=  2
iPageIDBoard			=  3
iPageIDCorner 			=  4


! ==============================================================================
!UI_PAGES
! ==============================================================================

	UI_PAGE iPageIDInsulation, iPageIDRoot, 'Insulation', 51
		gosub "insulationPage"

	UI_PAGE iPageIDPlaster, iPageIDRoot, 'Plaster', 54
		gosub "plasterPage"

	UI_PAGE iPageIDBoard, iPageIDRoot, 'Board', 54
		gosub "boardPage"

	UI_PAGE iPageIDCorner, iPageIDRoot, 'Corner', 55
		gosub "cornerPage"
END


! ==============================================================================
!SUBROUTINES
! ==============================================================================

! ------------------------------------------------------------------------------
"insulationPage":
	aRow = 1
	xOffset = 0
	ui_outfield "Thickness:", xLeft + xOffset, 				yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "thk_insulation", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24

	xOffset = 120
	ui_outfield "Material:", xLeft + xOffset, 				yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "mat_insulation", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24

	aRow = aRow + 1.5
	xOffset = 0
	ui_outfield "Insulation Sides:", xLeft + xOffset, 		yTop + (aRow - 1) * yRow , 100, 14

	ui_infield "ui_side_left", xLeft + xOffset + 5, 		yTop + (aRow - 1) * yRow + yLabel + 23, 14, 14
	ui_infield "ui_side_right", xLeft + xOffset + 55, 		yTop + (aRow - 1) * yRow + yLabel + 23, 14, 14
	ui_infield "ui_side_top", xLeft + xOffset + 30, 		yTop + (aRow - 1) * yRow + yLabel, 14, 14
	ui_infield "ui_side_bottom", xLeft + xOffset + 30, 		yTop + (aRow - 1) * yRow + yLabel + 50, 14, 14
	ui_separator xLeft + xOffset + 25, yTop + (aRow - 1) * yRow + yLabel + 20, xLeft + xOffset + 50, yTop + (aRow - 1) * yRow + yLabel + 45

return

! ------------------------------------------------------------------------------
"plasterPage":
