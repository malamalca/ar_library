	ui_infield "thk_plaster_sill", xLeft + xOffset, 		yTop + (aRow - 1) * yRow + yLabel, 80, 24

	xOffset = 200
	ui_outfield "Material:", xLeft + xOffset, 				yTop + (aRow - 1) * yRow , 120, 14
	ui_infield "mat_plaster", xLeft + xOffset, 				yTop + (aRow - 1) * yRow + yLabel, 80, 24

	xOffset = 300
	ui_outfield "Pen:", xLeft + xOffset, 					yTop + (aRow - 1) * yRow , 120, 14
	ui_infield "pen_plaster", xLeft + xOffset, 				yTop + (aRow - 1) * yRow + yLabel, 80, 24

	aRow = aRow + 1.5
	xOffset = 0
	ui_outfield "Sill Plaster Sides:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 100, 14

	ui_infield "ui_plaster_left", xLeft + xOffset + 5, 		yTop + (aRow - 1) * yRow + yLabel + 23, 14, 14
	ui_infield "ui_plaster_right", xLeft + xOffset + 55, 	yTop + (aRow - 1) * yRow + yLabel + 23, 14, 14
	ui_infield "ui_plaster_top", xLeft + xOffset + 30, 		yTop + (aRow - 1) * yRow + yLabel, 14, 14
	ui_infield "ui_plaster_bottom", xLeft + xOffset + 30, 	yTop + (aRow - 1) * yRow + yLabel + 50, 14, 14
	ui_separator xLeft + xOffset + 25, yTop + (aRow - 1) * yRow + yLabel + 20, xLeft + xOffset + 50, yTop + (aRow - 1) * yRow + yLabel + 45

	xOffset = 100
	ui_outfield "Offset from reveal:", xLeft + xOffset, 	yTop + (aRow - 1) * yRow , 120, 14
	ui_infield "offset_plaster", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24
return

! ------------------------------------------------------------------------------
"boardPage":
	aRow = 1
	xOffset = 0
	ui_outfield "Show Board", xLeft + xOffset+  20, 	yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "showBoard", xLeft + xOffset, 			yTop + (aRow - 1) * yRow, 14, 14

	aRow = aRow + 0.5
	xOffset = 0
	ui_outfield "Kind:", xLeft + xOffset, 				yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "boardKind", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	xOffset = 100
	ui_outfield "Profile:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 80, 14
