	ui_infield "vertoffset_board", xLeft + xOffset, 	yTop + (aRow - 1) * yRow + yLabel, 80, 24


	aRow = aRow + 1
	xOffset = 0
	ui_outfield "Width:", xLeft + xOffset, 				yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "width_board", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	xOffset = 100
	ui_outfield "Thickness:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "thk_board", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	xOffset = 200
	ui_outfield "Pen:", xLeft + xOffset, 				yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "pen_board", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 40, 24

	xOffset = 260
	ui_outfield "Material:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "mat_board", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 120, 24

return

! ------------------------------------------------------------------------------
