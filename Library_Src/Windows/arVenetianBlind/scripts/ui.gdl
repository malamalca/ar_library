	ui_infield "deltaFrontSideExt", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	aRow = aRow + 1.5
	xOffset = 0
	ui_outfield "Show Box Insulation", xLeft + xOffset+  20, 			yTop + (aRow - 1) * yRow , 120, 14
	ui_infield "bInsulation", xLeft + xOffset, 			yTop + (aRow - 1) * yRow, 14, 14
	ui_separator 3, yTop + (aRow - 1) * yRow + 5, xLeft - 3, yTop + (aRow - 1) * yRow + 5
	ui_separator 150, yTop + (aRow - 1) * yRow + 5, 450, yTop + (aRow - 1) * yRow + 5
	ui_separator 3, yTop + (aRow - 1) * yRow + 5, 3, yTop + (aRow + 0.5) * yRow + 5
	ui_separator 450, yTop + (aRow - 1) * yRow + 5, 450, yTop + (aRow + 0.5) * yRow + 5
	ui_separator 3, yTop + (aRow + 0.5) * yRow + 5, 450, yTop + (aRow + 0.5) * yRow + 5

	aRow = aRow + 0.5
	xOffset = 0
	ui_outfield "Thickness:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "insulationThickness", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	xOffset = 100
	ui_outfield "Material:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "insulationMat", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	aRow = aRow + 1.5
	xOffset = 0
	ui_outfield "Show Rail", xLeft + xOffset+  20, 			yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "bRail", xLeft + xOffset, 			yTop + (aRow - 1) * yRow, 14, 14
	ui_separator 3, yTop + (aRow - 1) * yRow + 5, xLeft - 3, yTop + (aRow - 1) * yRow + 5
	ui_separator 95, yTop + (aRow - 1) * yRow + 5, 450, yTop + (aRow - 1) * yRow + 5
	ui_separator 3, yTop + (aRow - 1) * yRow + 5, 3, yTop + (aRow + 0.5) * yRow + 5
	ui_separator 450, yTop + (aRow - 1) * yRow + 5, 450, yTop + (aRow + 0.5) * yRow + 5
	ui_separator 3, yTop + (aRow + 0.5) * yRow + 5, 450, yTop + (aRow + 0.5) * yRow + 5


	aRow = aRow + 0.5
	xOffset = 0
	ui_outfield "Bottom Offset:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "railBottomOffset", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	xOffset = 100
	ui_outfield "Material:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "railMat", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	!deltaFrontSideExt
return

