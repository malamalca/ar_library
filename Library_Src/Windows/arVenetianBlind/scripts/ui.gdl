	ui_infield "bBox", xLeft + xOffset, 			yTop + (aRow - 1) * yRow, 14, 14
	ui_separator 3, yTop + (aRow - 1) * yRow + 5, xLeft - 3, yTop + (aRow - 1) * yRow + 5
	ui_separator 100, yTop + (aRow - 1) * yRow + 5, 450, yTop + (aRow - 1) * yRow + 5
	ui_separator 3, yTop + (aRow - 1) * yRow + 5, 3, yTop + (aRow + 0.5) * yRow + 5
	ui_separator 450, yTop + (aRow - 1) * yRow + 5, 450, yTop + (aRow + 0.5) * yRow + 5
	ui_separator 3, yTop + (aRow + 0.5) * yRow + 5, 450, yTop + (aRow + 0.5) * yRow + 5


	aRow = 1.5
	xOffset = 0
	ui_outfield "Width:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 80, 14
	ui_infield "boxWidth", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 80, 24

	xOffset = 100
