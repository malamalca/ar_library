ui_dialog "ARHIM Blinds"
UI_CURRENT_PAGE gs_ui_current_page

xLeft = 20

yTop = 5
yLabel = 15
yRow = 40

iPageIDRoot 			= -1
iPageIDBasics			=  1
iPageID2DRepr			=  2
iPageID3DRepr			=  3
iPageIDDescript 		=  4


! ==============================================================================
!UI_PAGES
! ==============================================================================

	UI_PAGE iPageIDBasics, iPageIDRoot, 'Slats', 51
		gosub "basicsPage"

	UI_PAGE iPageID2DRepr, iPageIDRoot, 'Slats Box', 54
		gosub "slatsBoxPage"

	UI_PAGE iPageID3DRepr, iPageIDRoot, 'Description', 54
		gosub "descriptPage"
END


! ==============================================================================
!SUBROUTINES
! ==============================================================================

! ------------------------------------------------------------------------------
"basicsPage":
	aRow = 1
	xOffset = 0
	ui_outfield "Slats Kind:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "slatsKind", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24

	xOffset = 120
	ui_outfield "Profil:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "slatProfile", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24

	aRow = aRow + 1
	xOffset = 0
	ui_outfield "Side offset:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "sideOffset", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24

	xOffset = 120
	ui_outfield "Inside offset:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "insideOffset", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24

	aRow = aRow + 1
	xOffset = 0
	ui_outfield "Lowered Distance:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "loweredDistance", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24

	xOffset = 120
	ui_outfield "Slats Angle:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "slatAngle", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24

	xOffset = 240
	ui_outfield "Slats Material:", xLeft + xOffset, 			yTop + (aRow - 1) * yRow , 100, 14
	ui_infield "slatMat", xLeft + xOffset, 			yTop + (aRow - 1) * yRow + yLabel, 100, 24
return

! ------------------------------------------------------------------------------
"slatsBoxPage":
