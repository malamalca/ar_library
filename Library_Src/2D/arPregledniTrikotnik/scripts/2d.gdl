nix = 0.001set fill fillBgpen penBorderunId = 1hotspot2 0,  0, unId, roadWidth, 1: unId = unId + 1hotspot2 0,  roadWidth, unId, roadWidth, 2 : unId = unId + 1hotspot2 0,  -1, unId, roadWidth, 3 : unId = unId + 1hotspot2 0,  0, unId, offsetDistance, 1: unId = unId + 1hotspot2 0,  -offsetDistance, unId, offsetDistance, 2: unId = unId + 1hotspot2 0,  1, unId, offsetDistance, 3: unId = unId + 1hotspot2 0,  roadWidth / 2, unId: unId = unId + 1hotspot2 -stoppingDistance, roadWidth / 2, unId: unId = unId + 1if not(oneWay) then	hotspot2 stoppingDistance, roadWidth, unId: unId = unId + 1endifdefine fill "vert" 85, 85, 85, 85,85, 85, 85, 85,0.2, 45, 1,1.0, 90, 0.0, 0.0, 1,1.0if SYMB_MIRRORED = 1 then	fillRotation = fillRotation - 90endifset fill "vert"if oneWay then	line2 0, -offsetDistance, 0, roadWidth/2	poly2_b{2} 3, 1+2+4+8,		penFill, penBg,		0, 0, fillRotation,			0, -offsetDistance, 1,		-stoppingDistance, roadWidth / 2, 1,		0, roadWidth / 2, 1else	line2 0, -offsetDistance, 0, roadWidth	poly2_b{2} 5, 1+2+4+8,		penFill, penBg,		0, 0, fillRotation,			0, -offsetDistance, 1,		-stoppingDistance, roadWidth / 2, 1,		0, roadWidth / 2, 1,		0, roadWidth, 1,		stoppingDistance, roadWidth, 1endif