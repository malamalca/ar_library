for i = 1 to n	if i > 1 then		! this is a horizont line		pen penOutline		lin_ 		xyz[i-1][1], xyz[i-1][2], xyz[i-1][3], xyz[i][1], xyz[i][2], xyz[i][3]		hotline 	xyz[i-1][1], xyz[i-1][2], xyz[i-1][3], xyz[i][1], xyz[i][2], xyz[i][3], unId: unId = unId + 1	endif	! line from basepoint to horizon	pen penRay	lin_ originOffsetX, originOffsetY, originOffsetZ, xyz[i][1], xyz[i][2], xyz[i][3]next i